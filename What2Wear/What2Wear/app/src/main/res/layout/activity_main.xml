<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.lisa.what2wear.MainActivity">

    <TextView
        android:text="What will you wear today?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate outfit"
        android:id="@+id/generate_outfit"
        android:layout_marginBottom="15dp"
        android:layout_above="@+id/fav_outfit"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Favorite Outfits"
        android:id="@+id/fav_outfit"
        android:layout_marginBottom="15dp"
        android:layout_above="@+id/wardrobe"
        android:layout_centerHorizontal="true">

    </Button>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add to wardrobe"
        android:id="@+id/wardrobe"
        android:layout_marginBottom="15dp"
        android:layout_above="@+id/view_wardrobe"
        android:layout_centerHorizontal="true">

    </Button>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Wardrobe"
        android:id="@+id/view_wardrobe"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp">
        
    </Button>

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weather Recommendation: "
        android:id="@+id/weather_recom"
        android:textSize="20dp"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
